<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redread">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Activity_splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_home"
            android:label="主页"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".bookrack.Activity_pdfReader"
            android:label="pdf阅读页"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bookrack.Activity_txtReader"
            android:label="txt阅读页"
            android:screenOrientation="portrait" />
        <activity
            android:name=".setting.Activity_setting"
            android:label="设置"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.Activity_generalLogin"
            android:label="登录"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.Activity_organizationLogin"
            android:label="机构登录"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bookrack.Activity_booktrack_search"
            android:label="搜索本地图书"
            android:screenOrientation="portrait" />
        <activity
            android:name=".libary.Activity_bookDetail"
            android:label="图书详情页"
            android:screenOrientation="portrait"
            android:theme="@style/translucent" />
        <activity
            android:name=".libary.Activity_modeDetaillList"
            android:label="模块详情列表"
            android:screenOrientation="portrait" />
        <activity
            android:name=".libary.Activity_recommend"
            android:label="推荐馆藏"
            android:screenOrientation="portrait" />
        <activity
            android:name=".libary.Activity_typeSearch"
            android:label="分类检索"
            android:screenOrientation="portrait" />
        <activity
            android:name=".libary.WebView_borrow"
            android:label="借阅馆藏"
            android:screenOrientation="portrait" />
        <activity
            android:name=".libary.Activity_notifyList"
            android:label="通知列表"
            android:screenOrientation="portrait" />
        <activity
            android:name=".libary.Activity_libarySearch"
            android:label="馆藏搜索"
            android:screenOrientation="portrait" />
    </application>

</manifest>